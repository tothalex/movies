{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "~modules/*": ["modules/*"],
      "~types/*": ["types/*"],
      "~pipes/*": ["pipes/*"],
      "~utils/*": ["utils/*"],
      "~guards/*": ["guards/*"]
    } 
  }
}
