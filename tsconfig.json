{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~modules/*": ["src/modules/*"],
      "~pipes/*": ["src/pipes/*"],
      "~utils/*": ["src/utils/*"],
      "~guards/*": ["src/guards/*"],
      "~types/*": ["src/types/*"],
      "~services/*": ["src/services/*"],
      "~test/*": ["test/*"]
    } 
  }
}
